<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5a4446"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:descendantFocusability="afterDescendants"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:background="#fbfee9"
        android:gravity="center"
        android:padding="20dp"
        android:text="按钮1"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        android:layout_margin="20dp"
        android:background="#ffeec4"
        android:gravity="center"
        android:padding="20dp"
        android:text="按钮2"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn2"
        android:layout_margin="20dp"
        android:focusable="true"
        android:background="#fb7c85"
        android:gravity="center"
        android:padding="20dp"
        android:text="按钮3"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn3"
        android:layout_margin="20dp"
        android:focusable="true"
        android:background="#8baca1"
        android:gravity="center"
        android:padding="20dp"
        android:text="按钮4"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_toEndOf="@id/btn1"
        android:background="#8baca1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="按钮5"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_toEndOf="@id/btn5"
        android:background="#ffeec4"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="文本"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_toEndOf="@id/txt1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_below="@id/txt1"
        android:layout_toEndOf="@id/btn2"
        android:background="#ffeec4"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="文本2"
        android:textSize="20sp"/>

    <RelativeLayout
        android:id="@+id/relayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:focusable="true"
        android:layout_below="@id/txt1"
        android:layout_toEndOf="@id/txt2"
        android:background="@android:color/transparent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="@string/app_name"/>
    </RelativeLayout>
</RelativeLayout>
